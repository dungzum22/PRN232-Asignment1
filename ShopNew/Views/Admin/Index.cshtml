@{
    ViewData["Title"] = "Admin Dashboard";
    var stats = ViewBag.Stats as dynamic;
    var recent = ViewBag.RecentOrders as List<ShopNew.Models.Order>;
}

<div class="container py-4">
    <div class="d-flex flex-wrap justify-content-between align-items-end mb-4">
        <div>
            <h2 class="mb-1">Admin Dashboard</h2>
            <p class="text-muted mb-0">Overview and quick actions</p>
        </div>
        <div class="d-flex gap-2">
            <a href="@Url.Action("Users")" class="btn btn-outline-secondary">Users</a>
            <a href="@Url.Action("Orders")" class="btn btn-outline-secondary">Orders</a>
            <a href="@Url.Action("Products", "Admin")" class="btn btn-primary">Products</a>
        </div>
    </div>

    <style>
        .stat-card { border: 1px solid #e5e7eb; border-radius: .75rem; }
        .stat-icon { width: 40px; height: 40px; display: inline-flex; align-items: center; justify-content: center; border-radius: 9999px; background: #f1f5f9; color: #475569; }
        .table-modern thead th { font-weight: 600; color: #475569; background: #f8fafc; }
        .table-modern tr:hover { background: #f9fafb; }
    </style>

    <div class="row g-3 mb-4">
        <div class="col-12 col-md-3">
            <div class="card stat-card">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-muted small">Total Users</div>
                        <div class="fs-3 fw-semibold">@stats.TotalUsers</div>
                    </div>
                    <span class="stat-icon"><i class="fas fa-users"></i></span>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card stat-card">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-muted small">Total Products</div>
                        <div class="fs-3 fw-semibold">@stats.TotalProducts</div>
                    </div>
                    <span class="stat-icon"><i class="fas fa-box"></i></span>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card stat-card">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-muted small">Total Orders</div>
                        <div class="fs-3 fw-semibold">@stats.TotalOrders</div>
                    </div>
                    <span class="stat-icon"><i class="fas fa-receipt"></i></span>
                </div>
            </div>
        </div>
        <div class="col-12 col-md-3">
            <div class="card stat-card">
                <div class="card-body d-flex align-items-center justify-content-between">
                    <div>
                        <div class="text-muted small">Pending Orders</div>
                        <div class="fs-3 fw-semibold">@stats.PendingOrders</div>
                    </div>
                    <span class="stat-icon"><i class="fas fa-clock"></i></span>
                </div>
            </div>
        </div>
    </div>

    <div class="row g-3">
        <div class="col-12 col-xl-6">
            <div class="card border-0" style="border:1px solid #e5e7eb;">
                <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center" style="border-bottom:1px solid #e5e7eb;">
                    <h5 class="mb-0">Recent Orders</h5>
                    <a href="@Url.Action("Orders")" class="btn btn-sm btn-outline-secondary">View all</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-modern mb-0 align-middle">
                            <thead>
                                <tr>
                                    <th scope="col">Order</th>
                                    <th scope="col">User</th>
                                    <th scope="col">Items</th>
                                    <th scope="col">Total</th>
                                    <th scope="col">Status</th>
                                    <th scope="col">Payment</th>
                                    <th scope="col">Created</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (recent != null && recent.Count > 0)
                                {
                                    foreach (var o in recent)
                                    {
                                        var statusClass = o.Status == "Paid" ? "bg-success" : (o.Status == "Pending" ? "bg-warning" : "bg-secondary");
                                        var payLabel = string.IsNullOrEmpty(o.PaymentStatus) ? "-" : o.PaymentStatus;
                                        var payClass = o.PaymentStatus == "succeeded" ? "bg-success" : (string.IsNullOrEmpty(o.PaymentStatus) ? "bg-secondary" : "bg-warning");
                                        <tr>
                                            <td>#@o.Id</td>
                                            <td>@o.UserId</td>
                                            <td>@(o.Products?.Count ?? 0)</td>
                                            <td>@o.TotalAmount.ToString("C")</td>
                                            <td><span class="badge @statusClass text-white">@o.Status</span></td>
                                            <td>
                                                @if (payLabel == "-")
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                                else
                                                {
                                                    <span class="badge @payClass text-white">@payLabel</span>
                                                }
                                            </td>
                                            <td>@o.CreatedAt.ToString("MMM dd, yyyy HH:mm")</td>
                                        </tr>
                                    }
                                }
                                else
                                {
                                    <tr>
                                        <td colspan="7" class="text-center text-muted py-4">No recent orders</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12 col-xl-6">
            <div class="card border-0" style="border:1px solid #e5e7eb;">
                <div class="card-header bg-white border-0 d-flex justify-content-between align-items-center" style="border-bottom:1px solid #e5e7eb;">
                    <h5 class="mb-0">Products</h5>
                    <a href="@Url.Action("Products", "Admin")" class="btn btn-sm btn-outline-secondary">Manage</a>
                </div>
                <div class="card-body p-0">
                    <div class="table-responsive">
                        <table class="table table-modern mb-0 align-middle">
                            <thead>
                                <tr>
                                    <th scope="col">ID</th>
                                    <th scope="col">Name</th>
                                    <th scope="col">Price</th>
                                    <th scope="col">Stock</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var p in (await new ShopNew.Services.ProductService(Context.RequestServices.GetService<ShopNew.Data.ApplicationDbContext>()).GetAllProductsAsync()).Take(8))
                                {
                                    <tr>
                                        <td>@p.Id</td>
                                        <td class="text-truncate" style="max-width: 180px;" title="@p.Name">@p.Name</td>
                                        <td>@p.Price.ToString("C")</td>
                                        <td>@p.Stock</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
