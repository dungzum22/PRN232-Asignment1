@model List<ShopNew.Models.CartItem>
@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-end mb-3">
        <div>
            <h2 class="mb-1">Shopping Cart</h2>
            <p class="text-muted mb-0">Review your items and proceed to checkout</p>
    </div>
    </div>

    @* Removed banner notifications; add-to-cart now uses SweetAlert toast on product pages *@

    @if (Model != null && Model.Any())
    {
        <div class="row g-4">
            <div class="col-12 col-lg-8">
                @foreach (var item in Model)
                {
                    <div class="card shadow-sm mb-3">
                        <div class="card-body">
                            <div class="row g-3 align-items-center">
                                <div class="col-3 col-md-2">
                            @if (!string.IsNullOrEmpty(item.ImageUrl))
                            {
                                        <img src="@item.ImageUrl" alt="@item.ProductName" class="img-fluid rounded" style="height:70px;object-fit:cover;">
                                    }
                                    else
                                    {
                                        <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height:70px;">
                                            <i class="fas fa-image text-muted"></i>
                                        </div>
                                    }
                                </div>
                                <div class="col-9 col-md-6">
                                    <div class="fw-semibold">@item.ProductName</div>
                                    <div class="text-muted small">Unit price</div>
                                    <div class="text-primary fw-bold">@item.Price.ToString("C")</div>
                                </div>
                                <div class="col-12 col-md-4">
                                    <div class="d-flex flex-column flex-sm-row align-items-stretch align-items-sm-center gap-2 justify-content-end">
                                        <form method="post" asp-action="UpdateQuantity" class="d-inline">
                                            <input type="hidden" name="productId" value="@item.ProductId" />
                                            <div class="input-group" style="width: 150px;">
                                                <input type="number" name="quantity" value="@item.Quantity" min="1" class="form-control" />
                                                <button type="submit" class="btn btn-outline-primary">Update</button>
                                </div>
                            </form>
                                        <form method="post" asp-action="RemoveFromCart" class="d-inline">
                                <input type="hidden" name="productId" value="@item.ProductId" />
                                            <button type="submit" class="btn btn-outline-danger">
                                                <i class="fas fa-trash me-1"></i>Remove
                                            </button>
                            </form>
                                    </div>
                                    <div class="text-end mt-2">
                                        <span class="text-muted small">Item total</span>
                                        <div class="fw-semibold">@((item.Price * item.Quantity).ToString("C"))</div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="col-12 col-lg-4">
                <div class="card position-sticky" style="top: 1rem;">
                    <div class="card-header bg-white border-0" style="border-bottom:1px solid #e5e7eb;">
                        <h5 class="mb-0">Order Summary</h5>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Subtotal</span>
                            <span>@ViewBag.Total.ToString("C")</span>
                        </div>
                        <div class="d-flex justify-content-between mb-2">
                            <span class="text-muted">Shipping</span>
                            <span class="text-success">Free</span>
                        </div>
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Tax</span>
                            <span>$0.00</span>
                        </div>
                        <div class="d-flex justify-content-between align-items-center py-2" style="border-top:1px solid #e5e7eb;border-bottom:1px solid #e5e7eb;">
                            <span class="fw-semibold">Total</span>
                            <span class="fs-5 fw-bold text-primary">@ViewBag.Total.ToString("C")</span>
                        </div>
                        <div class="d-grid gap-2 mt-3">
                            <a href="@Url.Action("Checkout", "Order")" class="btn btn-success btn-lg">Proceed to Checkout</a>
                            <a href="@Url.Action("Index", "Products")" class="btn btn-outline-secondary">Continue Shopping</a>
                        </div>
                    </div>
    </div>
        </div>
    </div>
}
else
{
        <div class="text-center py-5 my-5">
            <div class="mb-3">
                <i class="fas fa-shopping-cart fa-4x text-muted"></i>
            </div>
            <h4 class="mb-2">Your cart is empty</h4>
            <p class="text-muted mb-4">Browse products and add items to your cart.</p>
            <a href="@Url.Action("Index", "Products")" class="btn btn-primary">
                <i class="fas fa-arrow-left me-2"></i>Continue Shopping
            </a>
    </div>
}
</div>
